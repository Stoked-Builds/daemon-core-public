---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const docs = await getCollection('docs');
  return docs.map((doc) => ({
    params: { slug: doc.slug },
    props: { doc },
  }));
}

const { doc } = Astro.props;
const { Content } = await doc.render();
---

<BaseLayout title={`${doc.data.title} | DaemonCore`} description={doc.data.description}>
  <article class="doc-content">
    <Content />
  </article>
</BaseLayout>

<style>
  .doc-content {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--space-6) var(--space-4);
  }

  .doc-content :global(h1) {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 300;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-4);
    color: var(--color-text);
  }

  .doc-content :global(h2) {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 300;
    letter-spacing: -0.01em;
    margin-top: var(--space-6);
    margin-bottom: var(--space-3);
    color: var(--color-text);
    border-bottom: var(--border-width) solid var(--color-amethyst);
    padding-bottom: var(--space-2);
  }

  .doc-content :global(h3) {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 400;
    margin-top: var(--space-4);
    margin-bottom: var(--space-2);
    color: var(--color-text);
  }

  .doc-content :global(p) {
    margin-bottom: var(--space-3);
    line-height: 1.7;
  }

  .doc-content :global(ul),
  .doc-content :global(ol) {
    margin-bottom: var(--space-3);
    padding-left: var(--space-4);
  }

  .doc-content :global(li) {
    margin-bottom: var(--space-1);
    line-height: 1.6;
  }

  .doc-content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.9em;
    background: rgba(139, 92, 246, 0.1);
    padding: 0.1em 0.3em;
    border-radius: 3px;
  }

  .doc-content :global(pre) {
    background: rgba(139, 92, 246, 0.1);
    padding: var(--space-3);
    border-radius: 6px;
    overflow-x: auto;
    margin-bottom: var(--space-3);
    border: var(--border-width) solid var(--color-amethyst);
  }

  .doc-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .doc-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: var(--space-3);
  }

  .doc-content :global(th),
  .doc-content :global(td) {
    text-align: left;
    padding: var(--space-2);
    border-bottom: var(--border-width) solid var(--color-amethyst);
  }

  .doc-content :global(th) {
    font-weight: 500;
    color: var(--color-text);
  }

  .doc-content :global(a) {
    color: var(--color-accent);
  }

  .doc-content :global(a:hover) {
    text-decoration: underline;
  }

  .doc-content :global(strong) {
    font-weight: 600;
    color: var(--color-text);
  }
</style>
