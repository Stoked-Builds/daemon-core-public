---
const currentPath = Astro.url.pathname;
const isDaemonSection = currentPath.startsWith('/daemon');
---

<nav>
  <div class="nav-container">
    <a href="/" class="logo">Daemon Core</a>
    <ul class="nav-links">
      <li><a href="/" class:list={[{ active: currentPath === '/' }]}>Home</a></li>
      <li><a href="/daemon" class:list={[{ active: isDaemonSection }]}>Kernel</a></li>
      {isDaemonSection && (
        <>
          <li><a href="/daemon/overview" class:list={[{ active: currentPath === '/daemon/overview' }]}>Overview</a></li>
          <li><a href="/daemon/architecture" class:list={[{ active: currentPath === '/daemon/architecture' }]}>Architecture</a></li>
          <li><a href="/daemon/faq" class:list={[{ active: currentPath === '/daemon/faq' }]}>FAQ</a></li>
          <li><a href="/daemon/blog" class:list={[{ active: currentPath.startsWith('/daemon/blog') }]}>Blog</a></li>
        </>
      )}
      <li><a href="https://github.com/stux-os/daemon-core-public" target="_blank" rel="noopener">GitHub</a></li>
    </ul>
  </div>
</nav>

<style>
  nav {
    background: var(--color-bg);
    padding: var(--space-2) 0;
    position: sticky;
    top: 0;
    z-index: 100;
    border-bottom: var(--border-width) solid var(--color-amethyst);
  }

  .nav-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--space-4);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 300;
    color: var(--color-text);
    text-decoration: none;
    letter-spacing: -0.02em;
    transition: color var(--duration-fast) var(--ease-default);
  }

  .logo:hover {
    color: var(--color-accent);
  }

  .nav-links {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: var(--space-3);
  }

  .nav-links a {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.9rem;
    font-family: var(--font-body);
    transition: color var(--duration-fast) var(--ease-default);
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: var(--color-text);
  }

  @media (max-width: 768px) {
    .nav-container {
      flex-direction: column;
      gap: var(--space-2);
    }

    .nav-links {
      flex-wrap: wrap;
      justify-content: center;
      gap: var(--space-2);
    }
  }
</style>
